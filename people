#!/bin/bash

filename="$HOME/.people"

if [ ! -f "$filename" ]; then
  touch "$filename"
fi

case "$1" in
  add)
    if [ $# -ne 2 ]; then
      echo "Usage: people add <name>"
      exit 1
    fi
    date=$(date +%s)
    echo "$date	add	$2" >> "$filename"
    ;;
  *)
    echo "Usage: people <command>"
    echo "Commands:"
    echo "  add <name> - add a person"
    exit 1
    ;;
esac
